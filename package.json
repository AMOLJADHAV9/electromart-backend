{
  "name": "electromart-backend",
  "version": "1.0.0",
  "description": "Backend services for ElectroMart e-commerce platform",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node server.js",
    "dev": "ts-node --transpile-only server.ts",
    "watch": "ts-node-dev --respawn --transpile-only server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "firebase-admin": "^11.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.7",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "electromart",
    "ecommerce",
    "backend",
    "nodejs",
    "express"
  ],
  "author": "ElectroMart Team",
  "license": "MIT"
}
